<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dd.timetable"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         <activity
            android:name="com.dd.timetable.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dd.timetable.SelectSchool"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.SelectSchool" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.dd.timetable.Update"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.Update" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.dd.timetable.ViewAll"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.ViewAll" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.dd.timetable.SelectLevel"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.SelectLevel" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.dd.timetable.SelectDay"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.SelectDay" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.dd.timetable.DisplayTimeTable"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dd.timetable.DisplayTimeTable" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
